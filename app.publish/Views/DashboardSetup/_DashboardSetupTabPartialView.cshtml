@using BusinessLogic.Logic;
@using DevExpress.Web.Mvc
@using Reports.Controllers.Cache
@{

    Html.DevExpress().PageControl(
     settings =>
     {
         settings.Name = "DashboardSetupTab";
         settings.EnableTabScrolling = true;

         settings.Width = Unit.Percentage(100);
         settings.ControlStyle.CssClass = "dxtcFixed";

         settings.TabPages.Add("Dashboard Setup").SetContent(() =>
         {
             using (Html.BeginForm())
             {
                 Html.RenderAction("DashboardGridPartialView", "DashboardSetup", new { });
             }
         });


         settings.TabPages.Add("Dashboard Remote Access").SetContent(() =>
         {
             using (Html.BeginForm())
             {
                 Html.RenderAction("DashboardAPITokenGridPartialView", "DashboardApiToken", new { });
             }
         });


     }).GetHtml();
    <script type="text/javascript">
        function EditDashboardTemplate(id)
        {
            location.href = '@Url.Action("Index", "DashboardDesign")?id=' + id;
        }

        function Click(text) {
            copyToClipboard(text);
        }

        function copyToClipboard(text) {
            var dummy = document.createElement("textarea");
            document.body.appendChild(dummy);
            dummy.value = text;
            dummy.select();
            document.execCommand("copy");
            document.body.removeChild(dummy);
        }
    </script>

}

 