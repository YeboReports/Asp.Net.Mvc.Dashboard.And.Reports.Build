<div class="divTop">
    Roles
</div>
 
@Html.DevExpress().PageControl(
         settings =>
         {
             settings.Name = "RoleTabs";
             settings.EnableTabScrolling = true;
             settings.Width = Unit.Percentage(100);
             settings.ControlStyle.CssClass = "dxtcFixed";
             settings.TabPages.Add("Roles").SetContent(() =>
             {
                 using (Html.BeginForm())
                 {

                     Html.RenderAction("RoleGridViewPartial", "RoleSetup", new { });
                 }

             });

             settings.TabPages.Add("Role Assigned").SetContent(() =>
             {
                 using (Html.BeginForm())
                 {
                     
                     Html.RenderPartial("_RoleSetupGridPartialView");
                 }

             });
  }).GetHtml()

<script type="text/javascript">

    function CacheChangeRoleId()
    {

             $.ajax({
                type: "POST",
                url: '@Url.Action("CacheRoleId", "RoleSetup")',
                data:
                {
                    Id: RoleDDL.GetValue()
                },
                success: function (response)
                {
                    DashboardRoleGridView.PerformCallback();
                    UserRoleGridView.PerformCallback();
                    ReportRoleGridView.PerformCallback();
                    VericalReportRoleGridView.PerformCallback();
 
                }
            });

    }


</script>