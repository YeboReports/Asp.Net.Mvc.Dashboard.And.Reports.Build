@using CommonDLL.DTO
@{
    ViewBag.Title = "Report";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}

<div class="divTop">
    Menu Setup
</div>
@Html.DevExpress().PageControl(
         settings =>
         {
             settings.Name = "MenuTabs";
             settings.EnableTabScrolling = true;
             settings.Width = Unit.Percentage(100);
             settings.ControlStyle.CssClass = "dxtcFixed";
             settings.TabPages.Add("Menu").SetContent(() =>
             {
                 using (Html.BeginForm())
                 {

                     Html.RenderAction("MenuGridPartialView", "MenuSetup", new { });
                 }

             });

             settings.TabPages.Add("SubMenu").SetContent(() =>
             {
                 using (Html.BeginForm())
                 {

                     Html.RenderAction("SubMenuGridPartialView", "MenuSetup", new { });
                 }

             });
  }).GetHtml()