<script type="text/javascript">


    var currentReportParameterId;

    function ShowReportParameterDetailPopup(_ReportParameterId) {
        LoadingPanel.Show();
        currentReportParameterId = _ReportParameterId;
        ReportParameterCallbackPanel.PerformCallback();
    }

    function OnReportParameterRowReportBeginCallback(s, e)
    {
        e.customArgs["Id"] = currentReportParameterId;
    }

    function OnReportParameterRowReportBeginCallback(s, e) {
        e.customArgs["Id"] = currentReportParameterId;
    }

    function OnReportParameterDateLookupReportBeginCallback(s, e)
    {
        e.customArgs["Id"] = currentReportParameterId;
    }

    function OnReportParameterRowReportEndCallback(s, e) {
        if (!ReportParameterEditRowPopup.IsVisible() && currentReportParameterId != null) {
            ReportParameterEditRowPopup.Show();
            LoadingPanel.Hide();

        }

    }



    function ReportParameterStoredProcedureListChanged(s, e)
    {

                $.ajax({
                type: "POST",
                url: '@Url.Action("UpdateParameterStoredProcedure", "ReportSetup")',
                data:
                {
                    Id: currentReportParameterId,
                    StoredProcudure: s.GetText()
                },
                success: function (response)
                {
                    if (response.UpdateStoredProcedure)
                    {
                        ReportParameterGridView.PerformCallback();
                       // ReportParameterEditRowPopup.Hide();
                    }
                    else
                    {

                        alert(response.errorMsg);
                    }


                }
            });
    }



    function OnComboBoxInit(s, e) {
